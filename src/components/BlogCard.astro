---
interface Props {
  title: string;
  description: string;
  publishDate: Date;
  category: string;
  href: string;
}

const { title, description, publishDate, category, href } = Astro.props;
---

<article class="card">
  <div class="card-content">
    <div class="card-meta">
      <span class="category-tag">{category}</span>
      <time datetime={publishDate.toISOString()} class="date">
        {publishDate.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>
    </div>
    <a href={href} class="card-title">
      {title}
    </a>
    <p class="card-description">
      {description}
    </p>
  </div>
</article>